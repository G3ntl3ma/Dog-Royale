<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.myapplication.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/main_to_current"
            app:destination="@id/current_games" />
        <action
            android:id="@+id/action_Main_to_upcomming"
            app:destination="@id/upcomming_games" />
        <action
            android:id="@+id/action_Main_to_past"
            app:destination="@id/past_games" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.myapplication.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/current_games"
        android:name="com.example.myapplication.current_games"
        android:label="fragment_current_games"
        tools:layout="@layout/fragment_current_games" >
        <action
            android:id="@+id/action_current_games_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/upcomming_games"
        android:name="com.example.myapplication.upcomming_games"
        android:label="fragment_upcomming_games"
        tools:layout="@layout/fragment_upcomming_games" />
    <fragment
        android:id="@+id/past_games"
        android:name="com.example.myapplication.past_games"
        android:label="fragment_past_games"
        tools:layout="@layout/fragment_past_games" />
</navigation>