<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gaBo_const_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violett_background"
    tools:context=".Game_board">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/game_board_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/game_board_layout"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/move_figure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play" />

        <ImageView
            android:id="@+id/lastCardView"
            android:layout_width="129dp"
            android:layout_height="137dp"
            android:layout_centerInParent="true"
            android:src="@drawable/card8" />

    </RelativeLayout>



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_board_layout">

        <LinearLayout
            android:id="@+id/playerInformationTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/Turns"
        style="@style/gameBoardTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="round 0/10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Rounds"
        style="@style/gameBoardTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Round: 1"
        app:layout_constraintEnd_toStartOf="@+id/Turns"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/GameHistoryView"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/game_board_layout"
        app:layout_constraintStart_toEndOf="@+id/timerView">

        <TextView
            android:id="@+id/MatchHistoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:text="Hello"/>
    </ScrollView>

    <TextView
        android:id="@+id/GameHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="10dp"
        android:text="Game History"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/GameHistoryView"
        app:layout_constraintStart_toEndOf="@+id/timerView" />

    <LinearLayout
        android:id="@+id/WinnerTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="50dp"
        android:background="#BD000000"
        android:backgroundTintMode="src_atop"
        android:foregroundTintMode="src_over"
        android:orientation="vertical"
        android:padding="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6">

        <TextView
            android:id="@+id/textView"
            style="@style/Leaderboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="55dp"
            tools:layout_conversion_absoluteWidth="212dp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="212dp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="174dp" />

    </LinearLayout>

    <Button
        android:id="@+id/leave_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/button_color"
        android:text="Leave"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>