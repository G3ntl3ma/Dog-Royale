<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #872341;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.PCObserverControllerStartScreen">
   <center>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #be3144;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="180.0" fitWidth="248.0"  pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/StartMenuLogo248x180.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="bttnStart" mnemonicParsing="false" onAction="#switchToObserverMenu" prefHeight="60.0" prefWidth="200.0">
               <font>
                  <Font size="30.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="27.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Start114x27.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
         <!-- this creates the dark red outline of the screen-->
         <BorderPane.margin>
            <Insets left="32.0" right="32.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" style="-fx-background-color: #872341;" BorderPane.alignment="CENTER">
         <children>
            <GridPane maxHeight="64.0" maxWidth="1.7976931348623157E308" prefHeight="64.0" prefWidth="664.0" style="-fx-background-color: #be3144;">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" />
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                     <children>
                        <Button fx:id="bttnExit" mnemonicParsing="false" onAction="#bttnExit">
                           <graphic>
                              <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/Exit64.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <padding>
                              <!-- this resizes the button to hide under the image attached to it-->
                              <Insets bottom="-1.0" top="-1.0" />
                           </padding></Button>
                     </children>
                  </HBox>
                  <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0">
                     <GridPane.margin>
                        <!-- this creates the dark red outline of the screen-->
                        <Insets right="30.0" />
                     </GridPane.margin>
                     <children>
                        <ImageView fx:id="imgLogo" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/final64Red.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <!-- this creates the dark red outline of the screen-->
                  <Insets bottom="32.0" left="32.0" right="32.0" />
               </VBox.margin>
            </GridPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </bottom>
   <top>
      <GridPane maxHeight="64.0" maxWidth="1.7976931348623157E308" minHeight="64.0" prefHeight="64.0" style="-fx-background-color: #be3144;" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <BorderPane.margin>
            <!-- this creates the dark red outline of the screen-->
            <Insets left="32.0" right="32.0" top="32.0" />
         </BorderPane.margin>
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Red.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
               <children>
                  <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/Red.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </GridPane>
   </top>
</BorderPane>
